# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Set keybindings for bspwm
super + Return
    kitty

super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

super + {1-9}
    bspc desktop -f ^{1-9}

super + shift + {1-9}
    bspc node -d ^{1-9}

# Other keybindings
super + Escape
    bspc node -c

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close
alt + shift + q
	bspc node -c
