[bar/mybar]
width = 100%
height = 24
background = #222222
foreground = #ffffff

modules-left = bspwm
modules-center = date
modules-right = pulseaudio

[module/bspwm]
type = internal/bspwm
label-focused = %name%

[module/date]
type = internal/date
date = %Y-%m-%d %H:%M:%S
interval = 1

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume> <ramp-volume>
label-volume = Volume: %percentage%%
